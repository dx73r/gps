<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GPS Sender</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white flex items-center justify-center h-screen font-sans">

    <div class="text-center p-8 bg-gray-800 rounded-lg shadow-2xl max-w-sm w-full">
        <h1 class="text-3xl font-bold mb-2">Bus GPS Broadcaster</h1>
        <p class="text-gray-400 mb-6">This page will send your phone's location to the tracking dashboard.</p>
        
        <div class="mb-4">
            <label for="busId" class="block mb-2 text-sm font-medium text-gray-300">Select Bus to Track:</label>
            <select id="busId" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                <option value="BUS02">BUS02 - KSRTC</option>
                <option value="BUS01">BUS01 - City Express</option>
                <option value="BUS03">BUS03 - Metro Shuttle</option>
                <option value="BUS04">BUS04 - Highway Rider</option>
            </select>
        </div>

        <button id="startButton" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-300">
            Start Broadcasting Location
        </button>

        <div id="status" class="mt-6 p-4 bg-gray-700 rounded-lg min-h-[100px] text-gray-300">
            Status: Waiting to start...
        </div>
    </div>

    <script type="module">
        // --- STEP 1: PASTE YOUR FIREBASE CONFIG HERE ---
        const firebaseConfig = {
apiKey: "AIzaSyANHQwHn-8mk91â€“4lgWflgateuFm0VrA4",
authDomain: "bus-tracker-3ce36.firebaseapp.com",
databaseURL: "https://bus-tracker-3ce36-default-rtdb.asia-southeast1.firebasedatabase.app",
projectId: "bus-tracker-3ce36",
storageBucket: "bus-tracker-3ce36.firebasestorage.app",
messagingSenderId: "705460767215",
appId: "1:705460767215:web:5b6f2079198af0a3724e1a",
measurementId: "G-PF48457XFB"
};
        // --- END OF FIREBASE CONFIG ---


        // Import Firebase modules
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.15.0/firebase-app.js";
        import { getFirestore, doc, setDoc } from "https://www.gstatic.com/firebasejs/9.15.0/firebase-firestore.js";

        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        const startButton = document.getElementById('startButton');
        const statusDiv = document.getElementById('status');
        const busSelector = document.getElementById('busId');
        let watchId = null;

        startButton.addEventListener('click', () => {
            if (watchId) {
                // If already watching, stop it
                navigator.geolocation.clearWatch(watchId);
                watchId = null;
                startButton.textContent = 'Start Broadcasting Location';
                startButton.classList.remove('bg-red-600', 'hover:bg-red-700');
                startButton.classList.add('bg-blue-600', 'hover:bg-blue-700');
                statusDiv.innerHTML = `Status: Stopped.`;
                return;
            }

            if ('geolocation' in navigator) {
                startButton.textContent = 'Stop Broadcasting';
                startButton.classList.remove('bg-blue-600', 'hover:bg-blue-700');
                startButton.classList.add('bg-red-600', 'hover:bg-red-700');
                statusDiv.innerHTML = `Status: Acquiring GPS signal...`;

                watchId = navigator.geolocation.watchPosition(
                    async (position) => {
                        const { latitude, longitude } = position.coords;
                        const selectedBusId = busSelector.value;
                        
                        statusDiv.innerHTML = `
                            <strong>Status: Broadcasting</strong><br>
                            Bus ID: ${selectedBusId}<br>
                            Latitude: ${latitude.toFixed(6)}<br>
                            Longitude: ${longitude.toFixed(6)}<br>
                            <span class="text-xs text-gray-500">Last update: ${new Date().toLocaleTimeString()}</span>
                        `;

                        // Send data to Firestore
                        try {
                            const busRef = doc(db, 'bus_locations', selectedBusId);
                            await setDoc(busRef, {
                                lat: latitude,
                                lng: longitude
                            }, { merge: true }); // merge: true prevents overwriting other fields
                        } catch (error) {
                            statusDiv.textContent = `Error: Could not send data. ${error.message}`;
                            console.error("Error writing to Firestore: ", error);
                        }
                    },
                    (error) => {
                        statusDiv.textContent = `Error: ${error.message}. Please ensure location services are enabled.`;
                    },
                    {
                        enableHighAccuracy: true, // Use GPS for best accuracy
                        timeout: 10000,
                        maximumAge: 0
                    }
                );
            } else {
                statusDiv.textContent = 'Error: Geolocation is not supported by your browser.';
            }
        });
    </script>
</body>
</html>


